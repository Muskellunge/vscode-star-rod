{
    "comments": {
        "lineComment": "%",
        "blockComment": [ "/%", "%/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "\"", "close": "\"", "notIn": [ "string" ] },
        { "open": "/%%", "close": "%/", "notIn": [ "string", "comment" ] }
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*({[^}%]*(%.*)$|([0-9A-Fa-f]+:\\s*)?(If|Else|Loop|Switch|Case\\s|Thread|ChildThread))($|\\s.*$)",
        "decreaseIndentPattern": "^\\s*(}|([0-9A-Fa-f]+:\\s*)?(EndIf|Else|EndLoop|EndSwitch|EndCaseGroup|EndThread|EndChildThread))($|\\s.*$)",
    },
}
