{
    "comments": {
        "lineComment": "%",
        "blockComment": [ "/%", "%/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")", "notIn": [ "string", "comment" ] },
        { "open": "{", "close": "}", "notIn": [ "string", "comment" ] },
        { "open": "[", "close": "]", "notIn": [ "string", "comment" ]  },
        { "open": "\"", "close": "\"", "notIn": [ "string", "comment" ] },
        { "open": "/%", "close": "%/", "notIn": [ "string", "comment" ] }
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(Else|If|Switch|Thread|ChildThread|Loop)(\\s|$)",
        "decreaseIndentPattern": "^\\s*(Else|End(If|Switch|Thread|ChildThread|Loop))(\\s|$)",
    }
}
