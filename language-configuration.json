{
    "comments": {
        "lineComment": "%",
        "blockComment": [ "/%", "%/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "\"", "close": "\"", "notIn": [ "string" ] },
        { "open": "/%%", "close": "%/", "notIn": [ "string", "comment" ] }
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
        "increaseIndentPattern": "^[ \t]*(.*{[^}\n]*$|(\\[?[0-9A-Fa-f]+[:\\]][ \t]+)?(If|Else|Loop|Switch|Case|Default|Thread|ChildThread)([ \t]*$|[ \t]+))",
        "decreaseIndentPattern": "^[ \t]*([^{\n]*}.*$|(\\[?[0-9A-Fa-f]+[:\\]][ \t]+)?(EndIf|EndLoop|EndSwitch|Case|Default|EndCaseGroup|EndThread|EndChildThread)([ \t]*$|[ \t]+))",
    },
}
